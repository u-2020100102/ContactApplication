<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CetContact.Views.EditContactPage"
             Title="EditContact">
    <VerticalStackLayout Spacing="10" Padding="10,10,10,10">

        <Frame BorderColor="Silver" Padding="10,2,10,2" >
            <HorizontalStackLayout>
                <Label Text="Ad" VerticalOptions="Center" WidthRequest="100"></Label>
                <Entry x:Name="NameEntry" VerticalOptions="Center" WidthRequest="200"></Entry>
            </HorizontalStackLayout>
        </Frame>

        <Frame BorderColor="Silver" Padding="10,2,10,2" >
            <HorizontalStackLayout>
                <Label Text="Telefon" VerticalOptions="Center" WidthRequest="100"></Label>
                <Entry x:Name="PhoneEntry" VerticalOptions="Center" WidthRequest="200"></Entry>
            </HorizontalStackLayout>
        </Frame>
        <Frame BorderColor="Silver" Padding="10,2,10,2" >
            <HorizontalStackLayout>
                <Label Text="EPosta" VerticalOptions="Center" WidthRequest="100"></Label>
                <Entry x:Name="EmailEntry" VerticalOptions="Center" WidthRequest="200"></Entry>
            </HorizontalStackLayout>
        </Frame>
        <Frame BorderColor="Silver" Padding="10,2,10,2"  >
            <HorizontalStackLayout>
                <Label Text="Adres" VerticalOptions="Center" WidthRequest="100"></Label>
                <Entry x:Name="AdressEntry" VerticalOptions="Center" WidthRequest="200"></Entry>
            </HorizontalStackLayout>
        </Frame>
        <Frame x:Name="popUpLayoutName" IsVisible="False">
            <HorizontalStackLayout>
                <Label Text="Lütfen isim alanını boş bırakmayınız" VerticalOptions="Center" WidthRequest="500"></Label>
            </HorizontalStackLayout>
        </Frame>
        <Frame x:Name="popUpLayoutEmail" IsVisible="False">
            <HorizontalStackLayout>
                <Label Text="Lütfen e-posta alanını boş bırakmayınız" VerticalOptions="Center" WidthRequest="500"></Label>
            </HorizontalStackLayout>
        </Frame>
        <Frame x:Name="deleteConfirmation" IsVisible="False">
            <HorizontalStackLayout>
                <Label Text="Silmek istediğinizden emin misiniz?" VerticalOptions="Center" WidthRequest="500"></Label>
                <Button Text="Sil" x:Name="DeleteConfirm" Clicked="DeleteConfirm_Clicked"></Button>
            </HorizontalStackLayout>
        </Frame>
        <Button Text="Kaydet" x:Name="SaveButton" Clicked="SaveButton_Clicked"></Button>
        <Button Text="Kaydı Sil" x:Name="DeleteButton" Clicked="DeleteButton_Clicked"></Button>
        <Button Text="Geri Dön" x:Name="BackButton" Clicked="BackButton_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>